-- yaptigimizda buralarda yorum yazabiliyoruz.
--TABLO OLUSTURMA--
CREATE TABLE student
(
id CHAR(4),
name VARCHAR(20),
age NUMBER
);

--VERI GIRISI : Tablomuza veri girisi yapacagiz.
INSERT INTO student VALUES('1001','Hakan INAL',42);
INSERT INTO student VALUES('1002','Asli INAL',38);

--TABLO dan veri sorgulama;
SELECT * FROM student;

--TABLO SILME
DROP TABLE student;

--PARCALI VERI GIRISI;
INSERT INTO student(id,name) VALUES('1003', 'Ali Ihsan');
INSERT INTO student(id,name) VALUES('1004', 'Said Orhan');
INSERT INTO student(id,name) VALUES('1005', 'Suheyla Belkis');

